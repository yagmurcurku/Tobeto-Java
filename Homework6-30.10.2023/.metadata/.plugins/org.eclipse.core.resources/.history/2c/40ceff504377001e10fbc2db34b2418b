
public class Main {

	public static void main(String[] args) {
		
		
		int total = 0;
		while (total < 1) {
			
			int sayi = 2;
			int toplam = 0;
			for(int bolen = 1; bolen < sayi ; bolen++) {
				if(sayi % bolen == 0) {
					toplam += bolen;
				}
			}
			if(toplam == sayi) {
				total+=1;
				System.out.println(sayi + " mükemmel sayıdır");
			}
			
			sayi ++;
		}
		
		
	
	}
}
